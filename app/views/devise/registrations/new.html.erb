<div class="container">
<section class="registration_area">
  <div class="registration_area__formbox">
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field_box">
          <div class="field">
                <%= f.label :name, "ユーザーネーム" %> <em>(15文字まで)</em><br />
                <%= f.text_field :name, autofocus: true, maxlength: "15", class: 'inputarea' %>
              </div>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'inputarea' %>
          </div>

          <div class="field">
            <%= f.label :password%>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: 'inputarea' %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'inputarea' %>
          </div>
    
          <div class="actions">
            <%= f.submit "新規登録する", class: "submit_btn" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>  
  </div>
</section>
</div>