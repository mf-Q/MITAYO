<div class="container">
<section class="registration_area">
  <div class="registration_area__formbox">

        <h2>Log in</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field_box">

            <div class="field">
                <%= f.label :name, "ユーザーネーム" %><br />
                <%= f.text_field :name, autofocus: true, maxlength: "15", class: 'inputarea' %>
              </div>

            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'inputarea'  %>
            
            <div class="field">
              <%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: 'inputarea'  %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "ログイン", class: "submit_btn" %>
            </div>
          <% end %>

        <%= render "devise/shared/links" %>
    </div>

  </div>
</section>
</div>